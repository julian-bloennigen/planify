{
  "name": "planify",
  "private": true,
  "workspaces": ["apps/*", "e2e"],
  "scripts": {
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "build": "pnpm -r build",
    "dev": "pnpm --parallel -C apps/backend dev & pnpm -C apps/frontend dev",
    "e2e": "pnpm -C e2e test",
    "e2e:ui": "pnpm -C e2e test:ui"
  },
  "packageManager": "pnpm@9.12.0"
}
