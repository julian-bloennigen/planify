{
  "name": "planify",
  "private": true,
  "scripts": {
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "coverage:merge": "node scripts/merge-coverage.mjs",
    "build": "pnpm -r build",
    "build:prod": "pnpm -C apps/frontend build && pnpm -C apps/backend build",
    "dev": "pnpm --parallel -C apps/backend dev & pnpm -C apps/frontend dev",
    "start:prod": "pnpm -C apps/backend start:prod",
    "e2e": "pnpm -C e2e test",
    "e2e:ui": "pnpm -C e2e test:ui"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^6.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.18.3"
}
